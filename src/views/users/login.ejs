<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/partHead') %>
</head>
<body>
    <%- include('./partials/header') %> 

    <div class="MainXd">
        <div class="contenedorReg">
            <div class="title">Inicia sesion</div>
            <form action="/users/login" id="formulario1" method="POST">
                <div class="user-details">
                    <div class="input-box email">
                        <span class="details email"> Email</span>
                        <input type="text" name="email" placeholder="Email" required>
                        <% if (locals.errors && errors.email) { %>
                            <p class="msg-error"><%= errors.email.msg%></p>
                        <% } %>
                    </div>
                    <div class="input-box password">
                        <span class="details"> Contraseña</span>
                        <input type="password" name="password" placeholder="Contraseña" required>
                        <% if (locals.errors && errors.password) { %>
                            <p class="msg-error"><%= errors.password.msg%></p>
                        <% } %>
                    </div>
                    <div class="input-box ">
                        <div class="recordarUsuario"> 
                            <span class="details"> Recordar Usuario</span>
                            <input class="checkboxRecordar" type="checkbox" name="recordar" >
                        </div>    
                    </div>
                </div>

                <div class="button-inicioses">
                    <input class="button-inicioSesion" type="submit" value="Iniciar sesion">
                </div>
            </form>
        </div>
    </div>

    <%- include('./partials/footer') %> 

    <script type="text/javascript" src="../js/login.js"></script>
</body>
</html>